  "layout_specifications": {
    "canvas": {
      "aspect_ratio": "3.4:1",
      "recommended_width": 3400,
      "recommended_height": 1000,
      "units": "px"
    },
    "frame": {
      "stroke_width": 4,
      "stroke_color": "#000000",
      "corner_radius": 0,

  "core_knowledge": {
    "design_system": {
      "name": "Golden Boy 4.0",
      "full_name": "CurationsLA Retro Poster Brutalist System",
      "architecture_type": "editorial-brutalist",
      "inspiration": [
        "LA street posters",
        "1960s screenprint culture",
        "Mid-century film festival graphics",
        "Public transit signage",
        "SoCal print culture"
      ],
      "philosophy": "Digital Brutalism reimagined through Los Angeles retro poster culture",
      "principles": [
        "Honest shapes",
        "Hard edges",
        "Flat inks",
        "High-contrast outline logic",
        "Function-driven layouts",
        "Cinematic LA sensibility"
      ]
    },
    "visual_dna": "CurationsLA's design system is an editorial-brutalist, retro-poster visual architecture defined by thick black outlines, flat mid-century color fields, geometric silhouettes, zero-radius construction, and a print-like grain aesthetic inspired by LA street posters and 1960s screenprint culture. All visuals use an ultra-structured layout grid: strong left-aligned typography inside a color block, hard-edge icon clusters on the right, and a rigid frame-with-shadow container. The style is anti-photographic, anti-gradient, pro-chunk, pro-outlineâ€”designed to feel like contemporary editorial graphics built with mid-century production limitations."
  },
  "invariants": {
    "description": "Non-negotiable architectural rules that must NEVER be broken",
    "rules": [
      {
        "id": "canvas_ratio",
        "rule": "Ultra-wide 3.4:1 aspect ratio",
        "value": "3.4:1",
        "enforcement": "mandatory"
      },
      {
        "id": "layout_split",
        "rule": "60/40 left bar to icon zone split",
        "values": {
          "left_bar": "60%",
          "icon_zone": "40%"
        },
        "enforcement": "mandatory"
      },
      {
        "id": "outline_width",
        "rule": "4px black outlines everywhere",
        "value": "4px",
        "color": "#000000",
        "enforcement": "mandatory"
      },
      {
        "id": "corner_radius",
        "rule": "Zero corner radius",
        "value": "0px",
        "enforcement": "mandatory"
      },
      {
        "id": "shadow_type",
        "rule": "Hard-edge shadows only (no blur)",
        "blur": "0px",
        "offset": {
          "x": "24px",
          "y": "24px"
        },
        "enforcement": "mandatory"
      },
      {
        "id": "color_fields",
        "rule": "Flat color fields only (no gradients)",
        "enforcement": "mandatory"
      },
      {
        "id": "typography",
        "rule": "Heavy geometric sans-serif with white fill and black outline",
        "weight": 900,
        "fill": "#FFFFFF",
        "stroke": "#000000",
        "stroke_width": 4,
        "enforcement": "mandatory"
      },
      {
        "id": "primary_icon_pop",
        "rule": "Primary icon pops 18% above frame",
        "value": "18%",
        "enforcement": "mandatory"
      },
      {
        "id": "silhouette_style",
        "rule": "Chunky geometric silhouettes",
        "characteristics": [
          "blocky",
          "angular",
          "geometric",
          "minimal interior detail"
        ],
        "enforcement": "mandatory"
      }
    ]
  },
